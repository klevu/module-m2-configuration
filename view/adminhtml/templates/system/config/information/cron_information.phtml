use Klevu\Configuration\Block\Adminhtml\Config\Form\KlevuFieldset;
use Klevu\Configuration\ViewModel\Config\Information\CronInformationInterface;

/**
 * @var KlevuFieldset $block
 * @var CronInformationInterface $viewModel
 */
$viewModel = $block->getViewModel();
$escaper = $block->getEscaper();

$cronExecutionData = $viewModel->getCronExecutionData();
?>

<?php foreach ($viewModel->getMessages() as $type => $messages): ?>
    <?php foreach ($messages as $message): ?>
        <div class="message message message-<?= $escaper->escapeHtmlAttr($type) ?>">
            <?= $escaper->escapeHtml($message->render()) ?>
        </div>
    <?php endforeach; ?>
<?php endforeach; ?>

<?php foreach ($cronExecutionData as $jobCode => $data): ?>
    <table class="klevu-cron-information">
        <caption><?= $escaper->escapeHtml($jobCode) ?></caption>
        <tbody>
            <tr>
                <th><?= $escaper->escapeHtml(__('Schedule')) ?></th>
                <td><?= $escaper->escapeHtml($data['schedule'] ?? '') ?></td>
            </tr>
            <tr>
                <th><?= $escaper->escapeHtml(__('Last Successful Execution')) ?></th>
                <?php $lastSuccess = $data['last_successful_execution']['finished_at'] ?? __('n/a'); ?>
                <td><?= $escaper->escapeHtml($lastSuccess) ?></td>
            </tr>
            <tr>
                <th><?= $escaper->escapeHtml(__('Next Execution')) ?></th>

                <?php if (!empty($data['next_scheduled_execution']['started_at'])): ?>
                    <?php $startedAt = $data['next_scheduled_execution']['started_at']; ?>
                    <td><?= $escaper->escapeHtml(__('Running since: %1', $startedAt)); ?></td>
                <?php else: ?>
                    <?php $nextScheduled = $data['next_scheduled_execution']['scheduled_at'] ?? __('n/a'); ?>
                    <td><?= $escaper->escapeHtml($nextScheduled) ?></td>
                <?php endif; ?>
            </tr>
        </tbody>
    </table>
<?php endforeach ?>

