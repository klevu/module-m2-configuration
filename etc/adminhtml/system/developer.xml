<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">

    <group id="logger">
        <field id="log_level_configuration"
               translate="label comment"
               sortOrder="10"
               type="select"
               showInDefault="1"
               showInWebsite="1"
               showInStore="1">
            <config_path>klevu_configuration/developer/log_level_configuration</config_path>
            <label>Configuration Log Level</label>
            <source_model>Klevu\Logger\Source\LogLevel\Monolog</source_model>
            <comment>
                <![CDATA[Log Level for the integration and configuration log.]]>
            </comment>
        </field>
    </group>
</config>
